export default class Repositorie {
    constructor() {
        this.users = [
            { name: 'usuario1', email: 'usuario@gmail.com' },
            { name: 'usuario2', email: 'usuario2@gmail.com' },
        ];
    }

    async index() {
        return this.users;
    }

    async create(data) {
        this.users.push(data);
        return data;
    }

    async update(id, data) {
        this.users[id] = { ...this.users[id], ...data };
        return this.users[id];
    }

    async delete(id) {
        const removed = this.users.splice(id, 1);
        return removed;
    }
}
