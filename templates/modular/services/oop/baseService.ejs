import repositorie from '../repositorie/baseRepositorie.js';

export default class Service {
    constructor() {
        this.repositorie = new repositorie();
    }

    async index() {
        return this.repositorie.index();
    }

    async create(data) {
        if (!data) return { error: 'Informaçõess ausentes' };

        return this.repositorie.create(data);
    }

    async update(id, data) {
        if (!id) return { error: 'Precisa informar o ID' };

        if (!data) return { error: 'Informaçõess ausentes' };

        return await this.repositorie.update(id, data);
    }

    async delete(id) {
        if (!id) return { error: 'Precisa informar o ID' };

        return await this.repositorie.create(id);
    }
}
