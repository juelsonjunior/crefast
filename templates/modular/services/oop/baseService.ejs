import repositorie from '../repositorie/baseRepositorie.js'

export default class Service{

    constructor(){
        this.repositorie = new repositorie()
    }

    async index() {
        const data = await this.repositorie.index();

        return { message: 'Listando todos os dados', data };
    }

    async create(data) {
        const newData = await this.repositorie.create(data);

        return { message: 'Criando dados', newData };
    }

    async update(id, data) {
        const updateData = await this.repositorie.update(id, data);

        return { message: 'Editando dados', updateData };
    }

    async delete(id) {
        const delData = await this.repositorie.create(id);

        return { message: 'Deletando dados', delData };
    }
};

