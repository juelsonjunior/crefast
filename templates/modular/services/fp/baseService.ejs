import Repositorie from '../repositorie/baseRepositorie.js';

const Service = {
    async index() {
        return Repositorie.index();
    },

    async create(data) {
        if (!data) return { error: 'Informações ausentes' };

        return Repositorie.create(data);
    },

    async update(id, data) {
        if (!id) return { error: 'Precisa informar o ID' };

        if (!data) return { error: 'Informaçõess ausentes' };

        return await Repositorie.update(id, data);
    },

    async delete(id) {
        if (!id) return { error: 'Precisa informar o ID' };

        return await Repositorie.delete(id);
    },
};

export default Service;
