import bindController from './bindController.js';

export default class Controller extends bindController {
    constructor() {
        super();
    }

    async index(req, res) {
        try {
            res.status(200).json(['Listando Informações']);
        } catch (err) {
            console.log(err);
            res.status(500).json({ message: 'Erro interno do servidor' });
        }
    }

    async create(req, res) {
        try {
            const data = req.body.data;

            if (!data) res.status(400).json({ error: 'Informaçõess ausentes' });

            res.status(201).json({ message: 'Informações criada', data });
        } catch (err) {
            console.log(err);
            res.status(500).json({ message: 'Erro interno do servidor' });
        }
    }

    async update(req, res) {
        try {
            const id = req.params.id;
            const data = req.body.data;

            if (!id) res.status(400).json({ error: 'Precisa informar o ID' });

            if (!data) res.status(400).json({ error: 'Informaçõess ausentes' });

            res.status(200).json({
                message: `Informações ${id} atualizada`,
                data,
            });
        } catch (err) {
            console.log(err);
            res.status(500).json({ message: 'Erro interno do servidor' });
        }
    }

    async delete(req, res) {
        try {
            const id = req.params.id;

            if (!id) res.status(400).json({ error: 'Precisa informar o ID' });
            
            res.status(200).json({ message: `Informações ${id} deletada` });
        } catch (err) {
            console.log(err);
            res.status(500).json({ message: 'Erro interno do servidor' });
        }
    }
}
